@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <div class="row d-flex justify-content-center">

        <div class="col-md-4">
            <h1 class="heading1 text-center">@ViewData["Title"]</h1>
            @{
                if (User.Identity.IsAuthenticated) {
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                        <button type="submit" class="nav-link btn btn-link text-dark">Click here to Logout</button>
                    </form>
                }
                else {
                    <p class="no-spacing text-center">You have successfully logged out of the application.</p>
                    <div class="d-flex justify-content-center">
                        <a asp-page="/Index" class="btn rounded-corners-small btn-primary">Home Page</a>
                    </div>
                }
            }
        </div>
    </div>
</header>