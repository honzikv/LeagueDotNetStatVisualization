@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row d-flex justify-content-center">
    <div class="col-md-4">
    <h1 class="heading1">@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterInput.Username"></label>
                <input asp-for="RegisterInput.Username" class="form-control"/>
                <span asp-validation-for="RegisterInput.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterInput.Email"></label>
                <input asp-for="RegisterInput.Email" class="form-control" />
                <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterInput.Password"></label>
                <input asp-for="RegisterInput.Password" class="form-control" />
                <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterInput.ConfirmPassword"></label>
                <input asp-for="RegisterInput.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
            </div>
            
            
            <h2 class="heading2 mt-4">Bind your in-game account</h2>
            <h4 class="no-spacing">This can also be changed later.</h4>
            <hr>
            <div class="form-group">
                <label asp-for="RegisterInput.SummonerName"></label>
                <input asp-for="RegisterInput.SummonerName" class="form-control"/>
                <span asp-validation-for="RegisterInput.SummonerName"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="RegisterInput.Server"></label>
                <select class="browser-default custom-select rounded-corners-small" asp-for="RegisterInput.Server">
                    @foreach (var (_, server) in Model.QueryableServers) {
                        <option value="@server">@server</option>
                    }
                </select>
            </div>
            
            
            <button type="submit" class="btn btn-primary rounded-corners-small button-light button-dark-blue float-right">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
