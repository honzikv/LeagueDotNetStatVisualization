@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="UserData.Username"></label>
            <input asp-for="UserData.Username" class="form-control" disabled/>
        </div>

        @if (Model.UserData.SummonerName is not null && Model.UserData.Server is not null) {
            <div class="form-group">
                <label asp-for="UserData.SummonerName"></label>
                <input asp-for="UserData.SummonerName" class="form-control" disabled>
            </div>
            
            <div class="form-group">
                <label asp-for="UserData.Server"></label>
                <input asp-for="UserData.Server" class="form-control" disabled/>
            </div>

            var routeData = new Dictionary<string, string>() {
                {"Name", Model.UserData.SummonerName},
                {"Server", Model.UserData.Server}
            };
            
            <a asp-page="/Profile" class="btn btn-primary rounded-corners-small float-right"
               asp-all-route-data="routeData">Show Summoner Page</a>
        }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}