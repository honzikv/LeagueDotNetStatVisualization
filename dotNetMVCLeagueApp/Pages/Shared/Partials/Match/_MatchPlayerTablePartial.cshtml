@model dotNetMVCLeagueApp.Pages.Data.MatchDetail.Overview.MatchTeamsDto

<h2 class="heading2">Team Overview</h2>

<div class="card-default-light card-body rounded-corners-small" id="playerTable">

    <h4 class="heading4 color-blue-side">Blue Team</h4>

    <div class="card-player-table rounded-corners-small card-body">
        @foreach (var playerKv in Model.BlueSidePlayers) {
            @await Html.PartialAsync("Shared/Partials/Match/_TeamTableCardPartial", playerKv.Value)
        }
    </div>

    <h4 class="heading4 mt-3 color-red-side">Red Team</h4>
    <div class="card-player-table rounded-corners-small card-body">
        @foreach (var playerKv in Model.RedSidePlayers) {
            @await Html.PartialAsync("Shared/Partials/Match/_TeamTableCardPartial", playerKv.Value)
        }
    </div>
</div>