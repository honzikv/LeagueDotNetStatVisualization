@using Microsoft.AspNetCore.Identity
@using dotNetMVCLeagueApp.Data.Models.User

@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

@if (signInManager.IsSignedIn(User)) {
    <li class="nav-item ">
        <a id="manage" class="nav-link navbar-menu-item" asp-area="Identity"
           asp-page="/Account/Manage/Index" title="Manage">
            <div class="text-small align-self-center">
                <div class="row d-flex align-items-center">
                    <div class="col-auto">
                        <p class="no-spacing">Profile</p>
                        <p class="no-spacing mt-n1">(@userManager.GetUserName(User))</p>
                    </div>

                </div>
            </div>
        </a>
    </li>
    <li class="nav-item">
        <form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
            <button type="submit" class="nav-link btn-link button-as-link navbar-menu-item">Logout</button>
        </form>
    </li>
}
else {
    <li class="nav-item">
        <a class="nav-link navbar-menu-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link navbar-menu-item" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}