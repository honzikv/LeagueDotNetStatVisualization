@model dotNetMVCLeagueApp.Data.FrontendDtos.Summoner.Overview.MatchListOverviewDto
<div class="rounded-corners-small card-light match-card mt-4">
    <div class="card-dark-header">
        <div class="row d-flex">
            <div class="col d-flex align-items-center align-self-center">
                <p class="header-text-h1">Overview</p>
            </div>
            <div class="col d-flex align-items-baseline align-self-center
                                                     flex-row-reverse">
                <button class="btn rounded-corners-small button-light button-light-primary ">Refresh</button>
            </div>
        </div>
        
    </div>
    <div class="card-body d-flex justify-content-around card-light-text">
        
    <div class="row no-gutters mt-1">
                <div class="col-auto">
                    <p class="header-text-h1">
                        <span class="color-win-light">@(Model.TotalStats.Wins + "W")</span> : <span class="color-loss-light">@(Model.TotalStats.Losses + "L")</span>
                    </p>
                    <p>70% WR</p>
                </div>
            </div>
    </div>
</div>