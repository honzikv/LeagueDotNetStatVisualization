@model dotNetMVCLeagueApp.Data.FrontendModels.Home.HomePageViewModel
@{
    ViewData["Title"] = "Search";
}

<div class="container-fluid text-center">
    <legend>Search for any summoner</legend>

    <div class="">
        <form class="col-md-4 offset-md-4 mt-5" asp-controller="Summoner" asp-action="SummonerInfo">

            <div class="col-12 m-1">
                <select class="form-control" name="server">
                    @foreach (var (queryKey, serverName) in Model.ServerList) {
                        <option name="@queryKey">@serverName</option>
                    }
                </select>
            </div>

            <div class="input-group-append">
                <input type="text" class="form-control" id="name" placeholder="Caps" name="name"/>
            </div>

            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-search"></i>
                </button>
            </div>

        </form>

    </div>
    
    <div class="col-lg-12 text-center mt-5">
      <h1>Bootstrap - Search Box Plugin</h1>
    </div>
    <div class="col-md-4 offset-md-4 mt-5 border border-success pt-3">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Search ......" aria-label="Recipient's username">
      <div class="input-group-append">
        <span class="input-group-text"><i class="fa fa-search"></i></span>
      </div>
      </div>
    </div>
    
</div>