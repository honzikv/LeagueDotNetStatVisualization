@model dotNetMVCLeagueApp.Data.FrontendDtos.Home.HomePageDto
@{
    ViewData["Title"] = "Search";
}

<div class="container-fluid">
    <div class="row vh-100">
        <div class="col-4 mx-auto mt-4">
            <h1 class="heading-search  justify-content-center text-center ">Search</h1>
            <form method="get" asp-controller="Summoner" asp-action="Profile">
                <select class="form-select mb-1" id="server" name="server">
                    @foreach (var (queryKey, serverName) in Model.ServerList) {
                        <option name="@queryKey">@serverName</option>
                    }
                </select>

                <input type="text" class="form-control mb-1 text-center" id="name" placeholder="Summoner name" name="name"/>

                <button type="submit" class="btn-hover mt-2 blue float-end">
                    <i class="fa fa-search"></i>
                </button>

            </form>

        </div>
    </div>

</div>